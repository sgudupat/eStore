<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <LinearLayout
        android:id="@+id/os_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/os_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Company Name" />

        <ImageButton
            android:id="@+id/os_profileimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:clickable="true"
            android:src="@drawable/profile"
            android:onClick="OestoreProfile" />

    </LinearLayout>

     <RelativeLayout
         android:id="@+id/os_layout2"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/os_layout" >

         <TextView
             android:id="@+id/os_summarytag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="55dp"
             android:layout_marginTop="30dp"
             android:text="Order Summary" />

         <LinearLayout
             android:id="@+id/os_layout3"
             android:layout_width="wrap_content"
             android:layout_height="150dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/os_summarytag"
             android:layout_marginTop="16dp"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/os_productdetails"
                 android:layout_width="match_parent"
                 android:layout_height="75dp"
                 android:gravity="center"
                 android:text="Product Details" />

             <TextView
                 android:id="@+id/os_customeraddressdetails"
                 android:layout_width="match_parent"
                 android:layout_height="75dp"
                android:gravity="center"
                 android:text="Customer Address Details" />
         </LinearLayout>

         <Button
             android:id="@+id/os_showprofilebutton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/os_layout3"
             android:layout_marginRight="18dp"
             android:layout_marginTop="19dp"
             android:text="Shop Now"
             android:onClick="StoreProduct" />

     </RelativeLayout>

</RelativeLayout>
