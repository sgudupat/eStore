<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/profile_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Company Name" />

        <ImageButton
            android:id="@+id/profile_profileimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:clickable="true"
            android:src="@drawable/profile" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/profile_layout1"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profile_layout" >

        <TextView
            android:id="@+id/profile_createtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="17dp"
            android:text="User Profile" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_createtag"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:hint="Name" />

        <TextView
            android:id="@+id/profile_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_Email"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_Email"
            android:gravity="center"
            android:hint="Mobile" />

        <TextView
            android:id="@+id/profile_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_name"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_name"
            android:gravity="center"
            android:hint="Email" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profile_layout1"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="17dp"
            android:hint="Address1" />

        <EditText
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address1"
            android:hint="Address2" />

        <EditText
            android:id="@+id/profile_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address2"
            android:hint="City" />

        <EditText
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_city"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_city"
            android:hint="State" />

        <EditText
            android:id="@+id/profile_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/state"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/state"
            android:hint="Country" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_country"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_country"
            android:hint="PinCode" />

        <Button
            android:id="@+id/profile_updatebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pincode"
            android:layout_centerHorizontal="true"
            android:text="Update" />

    </RelativeLayout>
 </RelativeLayout>