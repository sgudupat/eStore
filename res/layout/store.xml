<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/store_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/store_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Company Name" />

        <ImageButton
            android:id="@+id/store_profileimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:clickable="true"
            android:src="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/store_layout"
        android:orientation="horizontal"
        android:weightSum="1" >

        <EditText
            android:id="@+id/store_inputsearch"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.87"
            android:hint="Search products.."
            android:inputType="textVisiblePassword" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/store_gobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="Go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/star_layout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/store_layout1"
         android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/store_offer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Offer1"
            android:text="Offer1" />

    </LinearLayout>

</RelativeLayout>